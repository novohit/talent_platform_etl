# 数据管道插件环境变量配置示例

# ===== 基础配置 =====
PLUGIN_NAME=data_pipeline
ENVIRONMENT=development
DEBUG_MODE=true
LOG_LEVEL=INFO
LOG_FORMAT=standard

# ===== API配置 =====
API_BASE_URL=https://api.talent-platform.example.com
API_TIMEOUT=30
API_RETRIES=3
API_RATE_LIMIT=2.0

# ===== 数据库配置 =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=talent_platform
DB_USER=pipeline_user
DB_PASSWORD=your_password_here

# ===== 存储数据库配置（可与源数据库不同）=====
STORAGE_DB_HOST=localhost
STORAGE_DB_PORT=5432
STORAGE_DB_NAME=talent_platform
STORAGE_TABLE_PREFIX=pipeline_

# ===== 文件配置 =====
FILE_INPUT_DIR=/data/input
FILE_OUTPUT_DIR=/data/output
FILE_BACKUP_DIR=/data/backup
FILE_RETENTION_DAYS=30
FILE_FORMATS=json,csv,xlsx

# ===== 处理配置 =====
BATCH_SIZE=100
MAX_WORKERS=4
CHUNK_SIZE=1000
STRICT_VALIDATION=true
REMOVE_DUPLICATES=true
NORMALIZE_TEXT=true
HANDLE_MISSING_VALUES=skip
DATE_FORMAT=%Y-%m-%d
TEXT_ENCODING=utf-8

# ===== 缓存配置 =====
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ===== Redis配置 =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===== 管道配置 =====
PIPELINE_NAME=teacher_data_pipeline
PIPELINE_VERSION=2.0.0
PIPELINE_DESC=高级教师数据处理管道
EXECUTION_MODE=sequential
DRY_RUN=false
CONTINUE_ON_ERROR=false

# ===== 监控配置 =====
ENABLE_METRICS=true
METRICS_INTERVAL=60
LOG_TO_FILE=true

# ===== 验证规则配置 =====
VALIDATION_RULES=email_format,name_length,id_unique 