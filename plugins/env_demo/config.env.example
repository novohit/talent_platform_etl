# 环境变量配置演示插件 - 环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# =============================================================================
# 基础配置
# =============================================================================
PLUGIN_NAME=env_demo
DEBUG=true
LOG_LEVEL=DEBUG

# =============================================================================
# 业务配置
# =============================================================================
MAX_ITEMS=500
TIMEOUT=45.5
RETRY_COUNT=5
BATCH_SIZE=50

# =============================================================================
# 功能开关 (逗号分隔列表)
# =============================================================================
FEATURES_ENABLED=basic,advanced,premium
CACHE_ENABLED=true
MONITORING_ENABLED=true

# =============================================================================
# 外部服务配置
# =============================================================================
API_BASE_URL=https://api.mycompany.com
API_KEY=sk-1234567890abcdef
API_VERSION=v2

# =============================================================================
# 数据库配置
# =============================================================================
DB_HOST=db.mycompany.com
DB_PORT=3306
DB_NAME=plugin_database
DB_USER=plugin_user
DB_PASSWORD=secure_password_123

# =============================================================================
# 高级配置 (JSON格式)
# =============================================================================
CUSTOM_SETTINGS={"theme": "dark", "language": "zh-CN", "auto_save": true}
MAPPING_RULES={"user_id": "id", "user_name": "name", "user_email": "email"}

# =============================================================================
# 文件路径配置
# =============================================================================
DATA_DIR=/var/lib/plugin_data
LOG_DIR=/var/log/plugins
BACKUP_DIR=/var/backup/plugins

# =============================================================================
# 安全配置
# =============================================================================
SSL_VERIFY=true
ENCRYPTION_KEY=your_encryption_key_here 